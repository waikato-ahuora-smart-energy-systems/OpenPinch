    "version": "0.2.0",
    "configurations": [
        {
            "name": "Main Debugger",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/__main__.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Specific Test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}/tests/", 
            "args": [
              "test_analysis/test_heat_pump_targeting.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },   
        {
            "name": "e2e Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}/tests/", 
            "args": [
              "e2e",
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },    
        {
            "name": "All tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}/tests/", 
            "args": [
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },                
    ]
}